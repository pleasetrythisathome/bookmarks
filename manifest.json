{
  "name": "Dynamic Tab Manager",
  "version": "1.0",
  "manifest_version": 2,
  "description": "A simple extension for quickly saving and recalling tabs without using system resources",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "resources/public/index.html"
  },
  "permissions": [
    "bookmarks",
    "tabs"
  ],
  "chrome_url_overrides" : {
    "newtab": "resources/public/index.html"
  }
}
